{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "src/**/*.ts"
, "main.ts", "src/mybible_parser.ts", "src/api.ts"  ] ,
  "typedocOptions": {
    "entryPoints": ["api.ts"],
    "projectDocuments": ["docs/*.md"],
    "out": "./_site"
  }
}
